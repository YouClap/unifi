#! /bin/bash

pkg=UniFi.unix.zip
pkgname=unifi
pkgver=5.6.29
pkgrel=1
pkgdesc='Centralized management system for Ubiquiti UniFi AP'
pkgdir=/opt/UniFi
source=http://dl.ubnt.com/unifi/$pkgver/$pkg

curl -o $pkg $source

# unzip
unzip -ao $pkg

if [ $? -eq 0 ]; then
  # lib
  echo "âš   Installing lib files âš  "
  install -dm755 "$pkgdir"
  echo "ğŸ›   Copying files ğŸ›  "
  cp -rv UniFi/{bin,dl,lib,webapps} "$pkgdir/"
  echo "ğŸ›   Fixing permissions ğŸ‘® "
  chown -R ubnt:ubnt "$pkgdir/"
  echo "ğŸ‘  Installation finished ğŸ‰ "

  rm -Rf UniFi/ $pkg
fi

